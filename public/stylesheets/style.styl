html
body
	background-color:#EEE

body
	padding-top: 40px

.container
	> .row
		background-color: #fff
		padding: 20px
		margin: 0 -20px /* negative indent the amount of the
		padding to maintain the grid system */
		-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15)
		-moz-box-shadow: 0 1px 2px rgba(0,0,0,.15)
		box-shadow: 0 1px 2px rgba(0,0,0,.15)
	> .row:last-child
		-webkit-border-radius: 0 0 6px 6px
		-moz-border-radius: 0 0 6px 6px
		border-radius: 0 0 6px 6px
	> footer
		p
			text-align: center

.pageheader
	background-color: #f5f5f5
	padding: 20px 20px 10px
	margin: -20px -20px -20px
	position: relative
	
	.right
		position: absolute
		right: 1%
		top: 40%
	#recentTemperatures
		margin-left:2.2em
	#currentTemperature
		font-size: 90%
		line-height: 120%
		vertical-align: top

	#minTemperature
		position: absolute
		bottom:-0.5em
		left: 0.1em
		font-size:70%
		text-align: right
		width: 2.8em

	#maxTemperature
		position: absolute
		top:-0.8em
		left: 0.1em
		font-size:70%
		text-align: right
		width: 2.8em


.content 
	.span4 
		margin-left: 0
		padding-left: 19px
		border-left: 1px solid #eee
      
      
